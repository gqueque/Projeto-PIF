{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar Projeto PIF",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall",
        "-Wextra",
        "-g",
        "-Iinclude",
        "src/main.c",
        "src/cli.c",
        "-o",
        "build/projeto-pif.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compilação de main.c e cli.c com headers de include/"
    }
  ]
}
